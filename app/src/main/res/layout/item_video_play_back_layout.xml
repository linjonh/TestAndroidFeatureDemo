<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:padding="10dp"
    >

    <RelativeLayout
        android:id="@+id/coverLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/videoCoverIv"
            android:layout_width="160dp"
            android:layout_height="90dp"
        android:background="@color/colorAccent"
            />

        <ImageView
            android:id="@+id/pinTopIv"
            android:layout_width="32dp"
            android:layout_height="16dp"
            />

        <TextView
            android:id="@+id/timeSpanTv"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/videoCoverIv"
            android:layout_alignLeft="@+id/videoCoverIv"
            android:layout_alignStart="@+id/videoCoverIv"
            android:padding="5dp"
            android:text="11:20"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="12sp"
            />

        <TextView
            android:id="@+id/videoGeneratingTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="video_generating"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            />

        <ImageView
            android:id="@+id/forbiddenIconTipIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="visible"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/coverLayout"
        android:layout_alignTop="@+id/coverLayout"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/coverLayout"
        android:layout_toRightOf="@+id/coverLayout"
        >

        <TextView
            android:id="@+id/videoCreateTimeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="2017.06.05 23:50"
            android:textSize="12sp"
            />

        <TextView
            android:id="@+id/videoTitleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/videoCreateTimeTv"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:lineSpacingExtra="3dp"
            android:layout_above="@+id/editLayout"
            android:maxLines="2"
            android:text="陌小伊：我第一天直播，宝宝不要欺负我，宝宝不要欺负我，宝宝不要欺负我~"
            android:textSize="13sp"
            />

        <RelativeLayout
            android:id="@+id/editLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            >

            <TextView
                android:id="@+id/totalViewersTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawablePadding="2dp"
                android:maxLines="1"
                android:text="9999万"
                android:textSize="12sp"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                >

                <Button
                    android:id="@+id/editVideoItemBtn"
                    android:layout_width="37dp"
                    android:layout_height="23dp"
                    />

                <Button
                    android:id="@+id/shareVideoBtn"
                    android:layout_width="37dp"
                    android:layout_height="23dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:visibility="visible"
                    />
            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>